@model PateintCookie

@{
    Layout = "_DoctorLayout";
    ViewBag.Title = "Doctor Dashboard - Patient List";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h3 class="text-center mb-4">Patient List</h3>
            <div class="table-responsive shadow">
                <table class="table table-striped table-hover">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Patient ID</th>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Gender</th>
                            <th>DOB</th>
                            <th>Weight</th>
                            <th>Age</th>
                            <th>Health Conditions</th>
                            <th>Diseases</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model.Patients)
                        {
                            <tr>
                                <td>@patient.Id</td>
                                <td>@patient.PatientName</td>
                                <td>@patient.Contact</td>
                                <td>@patient.Gender</td>
                                <td>@patient.DOB.ToString("MM-dd-yyyy")</td>
                                <td>@patient.Weight</td>
                                <td>@patient.Age</td>
                                <td>@patient.HealthConditions</td>
                                <td>@patient.Diseases</td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-action="EditPatient" asp-route-id="@patient.Id" class="btn btn-sm btn-primary me-2">Edit</a>
                                        <a asp-action="DeletePatient" asp-route-id="@patient.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


