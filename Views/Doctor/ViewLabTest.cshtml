@model List<Medi_Connect.Models.LabResult>

@{
    Layout = "_DoctorLayout";
    ViewBag.Title = "Doctor Dashboard - Lab Test Results";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h3 class="text-center mb-4">Lab Test Results</h3>

            <div class="text-center mb-3">
                @using (Html.BeginForm("ViewLabTest", "Doctor", FormMethod.Get, new { @class = "d-flex justify-content-center" }))
                {
                    <div class="input-group">
                        @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Search" })
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                }
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Patient ID</th>
                            <th>Test Name</th>
                            <th>Result</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in Model)
                        {
                            <tr>
                                <td>@test.PatientId</td>
                                <td>@test.TestName</td>
                                <td>
                                    <a href="@Url.Content("~/" + test.ResultFilePath)" target="_blank">View Result</a>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditLabResult" asp-route-id="@test.Id" class="btn btn-sm btn-primary">Edit</a>
                                        <a asp-action="DeleteLabResult" asp-route-id="@test.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



