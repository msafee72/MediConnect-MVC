@model IEnumerable<Prescription>

@{
    Layout = "_DoctorLayout";
    ViewBag.Title = "Doctor Dashboard - Prescription History";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h3 class="text-center mb-4">Prescription History</h3>
            <div class="table-responsive shadow">
                <table class="table table-striped table-hover">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Prescription ID</th>
                            <th>Patient ID</th>
                            <th>Patient Name</th>
                            <th>Medicines</th>
                            <th>Lab Tests</th>
                            <th>Cost</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var presc in Model)
                        {
                            <tr>
                                <td>@presc.Id</td>
                                <td>@presc.PatientId</td>
                                <td>@presc.PatientName</td>
                                <td>@presc.Medicines</td>
                                <td>@presc.LabTests</td>
                                <td>@presc.Cost.ToString("C")</td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-action="EditPrescription" asp-route-id="@presc.Id" class="btn btn-sm btn-primary me-2">Edit</a>
                                        <a asp-action="DeletePrescription" asp-route-id="@presc.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


