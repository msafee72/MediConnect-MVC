@model Prescription

@{
    Layout = "_DoctorLayout";
    ViewBag.Title = Model.Id == 0 ? "Add Prescription" : "Edit Prescription";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <h5 class="card-header bg-dark text-white">@ViewBag.Title</h5>
                <div class="card-body">
                    <form asp-action="@(Model.Id == 0 ? "AddPrescription" : "EditPrescription")" method="post" class="row g-3">
                        @if (Model.Id != 0)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="col-md-6">
                            <label asp-for="PatientId" class="form-label">Patient ID:</label>
                            <input asp-for="PatientId" class="form-control" required>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PatientName" class="form-label">Patient Name:</label>
                            <input asp-for="PatientName" class="form-control" required>
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Medicines" class="form-label">Medicines:</label>
                            <textarea asp-for="Medicines" class="form-control" rows="1" required></textarea>
                            <span asp-validation-for="Medicines" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="LabTests" class="form-label">Lab Tests:</label>
                            <textarea asp-for="LabTests" class="form-control" rows="1" required></textarea>
                            <span asp-validation-for="LabTests" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Cost" class="form-label">Cost:</label>
                            <input asp-for="Cost" type="number" step="0.01" class="form-control" required>
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>

                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary me-2 w-100">Save</button>
                            <a href="/Doctor/ViewPrescription" class="btn btn-secondary w-100 mt-2">Go to Prescription List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


