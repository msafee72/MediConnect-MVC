@model Medi_Connect.Models.Patient

@{
    Layout = "_DoctorLayout";
    ViewBag.Title = (Model.Id == 0 ? "Add Patient" : "Edit Patient");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <h5 class="card-header bg-dark text-white">@ViewBag.Title</h5>
                <div class="card-body">
                    <form asp-action="@(Model.Id == 0 ? "AddPatient" : "EditPatient")" method="post" class="row g-3">
                        @if (Model.Id != 0)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="col-md-6">
                            <label asp-for="PatientName" class="form-label">Patient Name</label>
                            <input asp-for="PatientName" class="form-control" required>
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Contact" class="form-label">Contact</label>
                            <input asp-for="Contact" class="form-control" required>
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="DOB" class="form-label">Date of Birth</label>
                            <input asp-for="DOB" type="date" class="form-control" required>
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Weight" class="form-label">Weight (kg)</label>
                            <input asp-for="Weight" type="number" class="form-control" required>
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Age" class="form-label">Age</label>
                            <input asp-for="Age" type="number" class="form-control" required>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="HealthConditions" class="form-label">Health Conditions</label>
                            <textarea asp-for="HealthConditions" class="form-control" rows="1" required></textarea>
                            <span asp-validation-for="HealthConditions" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Diseases" class="form-label">Diseases</label>
                            <textarea asp-for="Diseases" class="form-control" rows="1" required></textarea>
                            <span asp-validation-for="Diseases" class="text-danger"></span>
                        </div>

                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary me-2 w-100">Save</button>
                            <a href="/Doctor/ViewPatient" class="btn btn-secondary w-100 mt-2">Go to Patients List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



