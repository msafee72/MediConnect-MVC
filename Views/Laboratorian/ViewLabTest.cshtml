@model IEnumerable<LabTest>

@{
    Layout = "_LaboratorianLayout";
    ViewBag.Title = "Laboratorian Dashboard - Lab Test";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h3 class="text-center mb-4">Lab Tests List</h3>
            <div class="table-responsive shadow">
                <table class="table table-striped table-hover">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Test Code</th>
                            <th>Test Name</th>
                            <th>Description</th>
                            <th>Cost</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in Model)
                        {
                            <tr>
                                <td>@test.Id</td>
                                <td>@test.TestName</td>
                                <td>@test.Description</td>
                                <td>@test.Cost.ToString("C")</td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-action="EditLabTest" asp-route-id="@test.Id" class="btn btn-sm btn-primary me-2">Edit</a>
                                        <a asp-action="DeleteLabTest" asp-route-id="@test.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


