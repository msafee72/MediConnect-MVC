@model IEnumerable<Doctor>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Doctor List";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="card-title text-center mb-0">Doctor List</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Doctor ID</th>
                                    <th>Doctor Name</th>
                                    <th>Phone Number</th>
                                    <th>Experience</th>
                                    <th>Specialization</th>
                                    <th>Gender</th>
                                    <th>Address</th>
                                    <th>DOB</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in Model)
                                {
                                    <tr>
                                        <td>@doctor.Id</td>
                                        <td>@doctor.DoctorName</td>
                                        <td>@doctor.Contact</td>
                                        <td>@doctor.Experience</td>
                                        <td>@doctor.Specialization</td>
                                        <td>@doctor.Gender</td>
                                        <td>@doctor.Address</td>
                                        <td>@doctor.DOB.ToString("MM/dd/yyyy")</td>
                                        <td>@doctor.Email</td>
                                        <td>@doctor.Password</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="EditDoctor" asp-route-id="@doctor.Id" class="btn btn-sm btn-primary">Edit</a>
                                                <a asp-action="DeleteDoctor" asp-route-id="@doctor.Id" class="btn btn-sm btn-danger">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


